<?xml version="1.0" encoding="UTF-8"?>
<form table="siscad.disciplina" primary="id">
	<go-to flag="success" action="[default]" />
	<go-to flag="fail" action="[same]" />
	<group label="Dados da Disciplina">

		<field type="String" column="nome" label="Name | pt_BR: Nome" max-length="128" />

		<field type="String" column="codigo" label="Código | pt_BR: Código" max-length="10" />

		<field type="String" column="descricao" label="Descrição | pt_BR: Descrição" max-length="100" />

		<field type="Integer" column="cargahoraria" label="Carga Horária(hs) | pt_BR: Carga Horária(hs)" max-length="5" />
		
		
		<field type="Enum" column="tipo" label="Tipo da Disciplina | pt_BR: Tipo da Disciplina">
			<item value="obrigatoria" label="Obrigatória  | pt_BR: Obrigatória" />
			<item value="optativa" label="Optativa | pt_BR: Optativa" />
		</field>
		
	</group>
</form>








	
	