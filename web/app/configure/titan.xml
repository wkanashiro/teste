	e-mail="robsonok@gmail.com"
	login-url="http://localhost:8080/siscad/app/titan.php?target=login"
	core-path="../../titan/core/"
	cache-path="cache/"
	doc-path="doc/"
	debug-mode="true"
	session="_PUT_A_RANDOM_HASH_HERE_"
